<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondecran"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right">


            <Button
                android:id="@+id/buttonDeconnexion"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="#FF9100"
                android:text="Deconnexion" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:background="@drawable/fondecran"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="342dp"
                android:layout_height="311dp"
                android:background="@drawable/fondecran"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#E4DBDB"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="193dp"

                android:background="@drawable/fondecran"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewDateEnvoi"
                    android:layout_width="268dp"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:text="Date Envoi : 17_05_2020" />

                <TextView
                    android:id="@+id/textViewStatut"
                    android:layout_width="268dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Statut : Non vue" />

                <ListView
                    android:id="@+id/listViewFichier"
                    android:layout_width="245dp"
                    android:layout_height="108dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonTelecharger"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="telecharger"
                    android:textColor="#692121"
                    android:textSize="8dp" />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>

