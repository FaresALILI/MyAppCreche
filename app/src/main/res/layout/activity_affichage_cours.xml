<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondecran"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right">


            <Button
                android:id="@+id/buttonDeconnexion"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="#FF9100"
                android:text="Deconnexion" />>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:background="@drawable/fondecran"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="342dp"
                android:layout_height="311dp"
                android:background="@drawable/fondecran"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#E4DBDB"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="127dp"
                android:background="@drawable/fondecran"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewDateEnvoi"
                    android:layout_width="268dp"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:text="Date Envoi : 17_05_2020" />

                <TextView
                    android:id="@+id/textViewStatut"
                    android:layout_width="268dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Statut : Non vue" />

                <ListView
                    android:layout_width="268dp"
                    android:layout_height="65dp"
                    android:layout_weight="1" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <Button
                android:id="@+id/buttonVlider"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FF55"
                android:inputType="textVisiblePassword"
                android:text="Passer l'activité à Vue"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>