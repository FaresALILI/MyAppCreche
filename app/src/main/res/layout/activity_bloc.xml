<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/fondecran"
    android:orientation="vertical"
    tools:context=".blocActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <TextView

            android:id="@+id/textViewClasse"
            android:layout_width="338dp"
            android:layout_height="40dp"
            android:background="#D6FF43"
            android:gravity="center"
            android:text="Niveau classe"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/buttonDeconnexion"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_decon"
            android:foreground="@drawable/deconn"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="102dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewDessin"
                    android:layout_width="120dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/dessin" />

                <TextView

                    android:id="@+id/textViewDessin"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Dessin"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="100dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewMus"
                    android:layout_width="148dp"
                    android:layout_height="132dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/musique" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Musique"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewActMan"
                    android:layout_width="142dp"
                    android:layout_height="73dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/manuelle" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Act manuelle"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="145dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewHist"
                    android:layout_width="143dp"
                    android:layout_height="104dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/histoire" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Histoire"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="109dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewDivers"
                    android:layout_width="102dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/divers" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Divers"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="97dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewCalcul"
                    android:layout_width="120dp"
                    android:layout_height="53dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/calcul" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Calcul"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <Button
            android:id="@+id/buttonNouveauCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_taches"
            android:inputType="textVisiblePassword"
            android:text="Nouveau cours"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>
