<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".blocActivity">


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">


        <Button
            android:id="@+id/buttonDeconnexion"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:text="Deconnexion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="109dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewDessin"
                    android:layout_width="120dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/dessin" />

                <TextView

                    android:id="@+id/textViewDessin"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Dessin"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="108dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewMus"
                    android:layout_width="148dp"
                    android:layout_height="132dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/musique" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="musique"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="113dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewActMan"
                    android:layout_width="103dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/manuelle" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:text="act Manuelle"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="113dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewHist"
                    android:layout_width="120dp"
                    android:layout_height="132dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/histoire" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Histoire"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="109dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewDivers"
                    android:layout_width="102dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/divers" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:text="Divers"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="107dp"
                android:gravity="center"

                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageViewCalcul"
                    android:layout_width="120dp"
                    android:layout_height="53dp"
                    android:layout_margin="3dp"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/calcul" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Calcul"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <Button
            android:id="@+id/buttonNouveauCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textVisiblePassword"
            android:text="Nouveau cour"
            android:visibility="visible" />

    </LinearLayout>



</LinearLayout>
