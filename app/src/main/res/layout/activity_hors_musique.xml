<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">


        <Button
            android:id="@+id/buttonDeconnexion"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_decon"
            android:foreground="@drawable/deconn"
            android:gravity="end"
            android:text="" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNomAct"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#9BFFC400"
            android:gravity="center"
            android:text="TextView"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="290dp"
            android:layout_height="306dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:visibility="visible"
            android:selectedWeekBackgroundColor="#55dd00"
            />

        <ListView
            android:id="@+id/listViewMusic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:visibility="visible"
            tools:visibility="visible"></ListView>
    </LinearLayout>


</LinearLayout>